{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-debugger": "warn",
    "no-undef": "error",
    "semi": ["warn", "always"],
    "quotes": ["warn", "double"],
    "eqeqeq": "warn"
  }
}
